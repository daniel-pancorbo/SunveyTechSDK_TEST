<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="3"
    android:gravity="center_vertical"
    android:background="@color/bottom_tab_color"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:padding="5dp"
    android:orientation="horizontal" >
    <ImageView
        android:id="@+id/live_text_resolution"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/btn_title_mask"
        android:contentDescription="@null"
        android:gravity="center"
        android:src="@drawable/bg_btn_setting" />

    <ImageView
        android:id="@+id/take_picture"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:background="@drawable/btn_title_mask"
        android:contentDescription="@null"
        android:scaleType="center"
        android:src="@drawable/bg_btn_take_pic" />
    <ImageView
        android:id="@+id/open_pic_list"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:background="@drawable/btn_title_mask"
        android:contentDescription="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/bg_btn_open_pic_list" />
    <ImageView
        android:id="@+id/show_or_hide_pic"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:background="@drawable/btn_title_mask"
        android:contentDescription="@null"
        android:scaleType="fitCenter"
        android:visibility="gone"
        android:src="@drawable/bg_btn_show_or_hide_pic" />

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/live_switch_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/btn_video_mode_switch_land"
            android:contentDescription="@null" />

        <TextView
            android:id="@+id/live_text_another"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:textColor="#FFd5d2cf" />
    </LinearLayout>
    
</LinearLayout>